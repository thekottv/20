            <Border Width="50" Height="50" HorizontalAlignment="Right" Margin="5,5,65,5" CornerRadius="5" BorderThickness="2" BorderBrush="#2220">
                <Border.Background>
                    <ImageBrush x:Name="IMG_Ava" ImageSource="D:\Шарага\Палыч\Палыч новое на удаленку\Session 1\laborant_2.png" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
            <TextBlock x:Name="TB_Name" Foreground="#333" Text="Павлов Михаил" FontSize="20" FontWeight="DemiBold" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,130,0"/>
            <TextBlock x:Name="TB_Role" Foreground="#545454" Text="Лаборант" FontSize="20" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,130,0"/>

            <TextBlock x:Name="TB_SessionTime" Foreground="#333" Text="Время сессии: 01:40:32" FontSize="20" FontWeight="DemiBold" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
            <TextBlock x:Name="TB_SessionWarning" Visibility="Hidden" Foreground="#b33" Text="[ ! ] Время Вашей сессии подходит к концу." FontSize="20" FontWeight="DemiBold" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#fff" Opacity="0.2"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
        <TabControl Grid.Row="1" BorderThickness="0" Background="#ddd">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <DockPanel>
                        <UniformGrid IsItemsHost="True" Rows="1" DockPanel.Dock="Top"></UniformGrid>
                        <ContentPresenter ContentSource="SelectedContent"></ContentPresenter>
                    </DockPanel>
                </ControlTemplate>
            </TabControl.Template>
            <TabItem Header="Исследования биоматериала">
                <Grid Background="#efefef">
                    <DataGrid x:Name="DGridProbirki" SelectionChanged="DGridProbirki_SelectionChanged" SelectionMode="Single" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Width="15" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Дата поступления" Width="*" Binding="{Binding dateOfOrder}"/>
                            <DataGridTextColumn Header="Статус исследования" Width="*" Binding="{Binding order_status.status}"/>
                            <DataGridTextColumn Header="Фио Пациента" Width="*" Binding="{Binding patient.FIO}"/>
                            <DataGridTemplateColumn Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="BTN_More"  Click="More_Click" Content="Подробности" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="25" Background="#92d050" Foreground="#222"/>
                                        <!--Click="More_Click"-->
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="20"  Content="Принять Биоматериал" Background="#92d050" Foreground="#222" BorderBrush="#77a941" BorderThickness="2" Click="BTN_NewProbirka_click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Direction="280" Color="#FF6D9C3B" Opacity="0.3" RenderingBias="Performance"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Сформировать отчеты">
                <Grid Background="#efefef">
                    <Button Width="300" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Сформировать отчеты"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
